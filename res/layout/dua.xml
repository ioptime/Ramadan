<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="0dip" >

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="0dip" >

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="Sehr-o-Iftar Dua&apos;s"
            android:textColor="@color/White"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/r1"
        android:background="@android:color/transparent" >

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:padding="10dip"
            android:scrollbars="none" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent" >

                <TextView
                    android:id="@+id/sehar_title"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Sehar Dua"
                    android:textColor="@color/Black"
                    android:textSize="18dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="400dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sehar_title"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/sehar_dua" />

                <TextView
                    android:id="@+id/iftar_title"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_below="@+id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Iftar Dua"
                    android:textColor="@color/Black"
                    android:textSize="18dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="400dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iftar_title"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/iftar_dua" />

                <TextView
                    android:id="@+id/height_issue"
                    android:layout_width="fill_parent"
                    android:layout_height="150dip"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
				/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:background="#60000000"
        android:gravity="center" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="70dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip"
                android:background="#60000000"
                android:gravity="center" >

                <Button
                    android:id="@+id/home"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/home_button" />

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="5dip"
                    android:gravity="center"
                    android:text="Ramadan"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/month"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@+id/home"
                    android:background="@drawable/month_button" />

                <TextView
                    android:id="@+id/month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/home_text"
                    android:gravity="center"
                    android:text="Monthly"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/settings"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@+id/month"
                    android:background="@drawable/settings_button" />

                <TextView
                    android:id="@+id/settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="15dip"
                    android:layout_toRightOf="@+id/month_text"
                    android:gravity="center"
                    android:text="Settings"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/about"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@+id/settings"
                    android:background="@drawable/about_button" />

                <TextView
                    android:id="@+id/about_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@+id/settings_text"
                    android:gravity="center"
                    android:text="Dua"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/salah_time"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_toRightOf="@+id/about"
                    android:background="@drawable/salah_button" />

                <TextView
                    android:id="@+id/salah_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home"
                    android:layout_marginLeft="50dip"
                    android:layout_toRightOf="@+id/about_text"
                    android:gravity="center"
                    android:text="Salah"
                    android:textColor="@color/White"
                    android:textStyle="bold" />
            </RelativeLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>